<style>
@import url("https://fonts.googleapis.com/css2?family=Rubik+Scribble&display=swap");

body {
  padding: 0;
  margin: 0;
  color: white;
  background-color: black;
}

h1 {
  position: absolute;
  width: 800px;
  height: 100px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-family: "Rubik Scribble";
}

</style>

<script>
gsap.registerPlugin(SplitText, Physics2DPlugin);

var split = SplitText.create("#split", {type: "chars"}),
  tl = gsap.timeline({ repeat: -1 });

gsap.set("#split", { opacity: 1 });

tl.from(split.chars, {
  duration: 1,
  y: 100,
  rotation: 90,
  opacity: 0,
  ease: "elastic",
  stagger: 0.03
});

//exploding text...
tl.to(split.chars, {
    duration: 2.5,
    opacity: 0,
    rotation: "random(-2000, 2000)",
    stagger: 0.015,
    physics2D: () => ({
      angle: "random(240, 320)",
      velocity: "random(300, 600)",
      gravity: 800
    })
  }, 3);

</script>